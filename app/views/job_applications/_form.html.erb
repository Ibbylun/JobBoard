<%= simple_form_for(@job_application) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :job_listing %>
    <%= f.association :user %>
    <%= f.input :status %>
    <%= f.input :cover_letter %>
    <%= f.input :available %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
